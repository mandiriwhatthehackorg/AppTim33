<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard_service_container"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingHorizontal="2dp">


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:elevation="0dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/fragment_profile_foto_progress_bar"/>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/freelancer_foto_profile"/>
                </FrameLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Damaz Bagaskara"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/roboto_bold"
                        android:id="@+id/freelancer_nama"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lihat profil"
                        android:textSize="12dp"
                        android:gravity="end"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/roboto_bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ash"
                    android:layout_marginVertical="6dp"></LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginVertical="4dp"
                    android:text="Ui/Ux Designer"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="13dp"
                    android:id="@+id/freelancer_keahlian"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="Lorem ipsum dolor "
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_light"
                    android:textSize="13dp"
                    android:id="@+id/freelancer_deskripsi"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>